@model TrustRadhe.Models.Franchise

@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_FranchisePanelLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <br />
    </div>
    <!-- /.col-lg-12 -->
</div>

<!-- /.row -->
@using (Html.BeginForm("ChangePassword", "Franchise", FormMethod.Post, new { @id = "form1" }))
{

    <span style="color:red"> @TempData["ChangefpPassword"]</span>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Change Password
                </div>
                <div class="panel-body">

                    <fieldset>
                        <div class="row">

                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label>Old Password <span style="color:red">*</span></label>
                                    @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.OldPassword)
                                    @*<input type ="text" id="txtLastName" value="@item1.LastName" disabled="disabled" class="form-control" />*@
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label>New Password <span style="color:red">*</span></label>
                                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.NewPassword)
                                    @*<input type ="text" id="txtMobile"  value="@item1.Mobile" disabled="disabled" class="form-control" />*@
                                </div>
                            </div>
                        </div>

                        <div class="row">

                            <div class="col-lg-6">
                                <div class="form-group">
                                    <br />
                                    <input type="submit" id="btnUpdate" class="btn btn-success pull-right" name="btnUpdate" value="Update" onclick="return validate();" />
                                </div>
                            </div>
                        </div>


                    </fieldset>

                </div>
            </div>
        </div>
    </div>

}
<style>
    .errortext {
        border: 1px solid red !important;
        background-color: #fff0f0 !important;
    }
</style>
<script>
    function validate() {
        $(".errortext").removeClass("errortext");
     
        if ($('#OldPassword').val() == '') {
            $("#OldPassword").addClass('errortext');
            $('#OldPassword').focus();
            return false;
        }
        if ($('#NewPassword').val() == '') {
            $("#NewPassword").addClass('errortext');
            $('#NewPassword').focus();
            return false;
        }

        return true;
    }
</script>


