@model TrustRadhe.Models.Franchise

@{
    ViewBag.Title = "KitStatusList";
    Layout = "~/Views/Shared/_FranchisePanelLayout.cshtml";
}

<style>
    #divload {
        width: 100%;
        height: 100%;
        position: fixed;
        z-index: 9999;
        background: url("../../images/loader.gif") no-repeat center center rgba(0,0,0,0.25);
    }

    .errortext {
        border: 1px solid red !important;
    }
</style>
<div class="loader" id="divload"></div>
<div class="row">
    <div class="col-sm-12">
        <ol class="breadcrumb">
            <li>
                <i class="clip-home-3"></i>
                <a href="#">
                   Kit Request
                </a>
            </li>
            <li class="active">
             Approved Kit List
            </li>
        </ol>
    </div>
</div>

<br />
@using (Html.BeginForm("KitStatusList", "FranchiseAdmin", FormMethod.Post, new { @id = "form1", name = "formKYC" }))
{
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Kit Status List
                </div>

                <div class="panel-body">
                     
                    <div class="row">
                        <div class="col-md-12 table-responsive">
                            <table id="example23" class="display nowrap table table-hover table-striped table-bordered" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>Sr No.</th>
                                        <th>Request Code</th>
                                        <th>Kit Name</th>
                                        <th>Requested Qty</th>
                                        <th>Approve Qty</th>
                                        <th>Amount</th>
                                        <th>Payment Mode</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lstRequest != null)
                                        {
                                            int i = 1;
                                            foreach (var Item in Model.lstRequest)
                                            {
                                                <tr class="text-left">
                                                    <td>@i</td>
                                                    <td>@Item.RequestCode</td>
                                                   
                                                    <td>@Item.KitName</td>
                                                    <td>@Item.Quantity</td>
                                                    <td>@Item.ApprovedQuantity</td>
                                                    <td>@Item.TotalAmount</td>
                                                    <td>@Item.PaymentMode</td>
                                                    <td>@Item.Status</td>
                                                    
                                                </tr>

                                                i++;
                                            }
                                        }
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<script src="../../vendor/jquery/jquery.min.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.0/themes/smoothness/jquery-ui.css">
<script>
    $(document).ready(function () {
        $("#divload").css({ 'display': 'none' });
    });
    function isNumberKey(evt) {
        var charCode = (evt.which) ? evt.which : event.keyCode
        if (charCode > 31 && (charCode < 48 || charCode > 57))
            return false;
        return true;
    }
 
    
</script>


