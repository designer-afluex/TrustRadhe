@model TrustRadhe.Models.Franchise

@{
    ViewBag.Title = "StockReportProductWise";
    Layout = "~/Views/Shared/_FranchisePanelLayout.cshtml";
}


<div class="row">
    <div class="col-sm-12">
        <ol class="breadcrumb">
            <li>
                <i class="clip-home-3"></i>
                <a href="#">
                    Admin
                </a>
            </li>
            <li class="active">
                Product Wise Stock Report
            </li>
        </ol>
    </div>
</div>
<br />
@using (Html.BeginForm("StockReportProductWise", "Franchise", FormMethod.Post, new { @id = "form1", name = "formKYC" }))
{
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Stock Report
                    <a href="/Franchise/StockList" class="btn btn-sm btn-primary link pull-right">Back</a>
                </div>
                <div class="panel-body">


                    <div class="row">
                        <div class="col-md-12 table-responsive">
                            <table id="example23" class="display nowrap table table-hover table-striped table-bordered" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>Sr No.</th>
                                        <th>Transaction Date </th>
                                        <th>Narration</th>
                                        <th>Received Stock</th>
                                        <th>Sold Stock</th>
                                        <th>Current Stock </th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lstFranchise != null)
                                        {
                                            int i = 1;
                                            foreach (var Item in Model.lstFranchise)
                                            {
                                                <tr class="text-left">
                                                    <td>@i</td>
                                                    <td>@Item.TransactionDate</td>
                                                    <td>@Item.Narration</td>
                                                    <td>@Item.Credit</td>
                                                    <td>@Item.Debit</td>
                                                    <td>@Item.Balance</td>

                                                </tr>

                                                i++;
                                            }
                                        }
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


<script src="../../vendor/jquery/jquery.min.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.0/themes/smoothness/jquery-ui.css">