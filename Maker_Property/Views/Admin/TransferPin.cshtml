@model TrustRadhe.Models.Wallet

@{
    ViewBag.Title = "TransferPin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">
    <div class="col-sm-12">
        <ol class="breadcrumb">
            <li>
                <i class="clip-home-3"></i>
                <a href="#">
                    Pin Management
                </a>
            </li>
            <li class="active">
                Unused Pins
            </li>
        </ol>
    </div>
</div>
<br />

@using (Html.BeginForm("TransferPinAction", "Admin", FormMethod.Post, new { @id = "form1", name = "formKYC" }))
{
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    PIN Transfer
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                E-Pin No <span style="color: red">*</span>
                                @Html.TextBoxFor(m => m.ePinNo, new { @class = "form-control", @Readonly = "true" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            Transfer To <span style="color: red">*</span> <span id="txtname" style="color: blue" class="pull-right"></span>
                            @Html.TextBoxFor(m => m.LoginId, new { @class = "form-control", @Placeholder = "Login Id", @onchange = "getmembername(this);" })
                            @Html.ValidationMessageFor(m => m.LoginId)
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <br />
                                <input type="submit" id="btnTransfer" class="btn btn-success pull-right" name="Search" value="Transfer PIN" />
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

}

