@model TrustRadhe.Models.Franchise

@{
    ViewBag.Title = "StockReport";
    Layout = "~/Views/Shared/FranchiseMasterLayout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <ol class="breadcrumb">
            <li>
                <i class="clip-home-3"></i>
                <a href="#">
                    Reports
                </a>
            </li>
            <li class="active">
                Stock Report
            </li>
        </ol>
    </div>
</div>
<br />
@using (Html.BeginForm("StockReport", "FranchiseAdmin", FormMethod.Post, new { @id = "form1", name = "formKYC" }))
{
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Stock Report
                    @*  <a href="/FranchiseAdmin/Registration" class="btn btn-sm btn-primary link pull-right">Add New Product</a>*@
                </div>
                <div class="panel-body">
                    <div class="row">
                       
                        <div class="col-lg-3">
                            <label for="inputEmail4" class="col-form-label">Franchise Name </label>
                            @Html.TextBoxFor(m => m.FranchiseName, new { @class = "form-control " ,@placeholder ="Search by Franchise Name"})

                        </div>
                        <div class="col-lg-3">
                            <label for="inputEmail4" class="col-form-label">Franchise ID </label>
                            @Html.TextBoxFor(m => m.LoginID, new { @class = "form-control " ,@placeholder ="Search by Franchise ID"})

                        </div>
                        <div class="col-lg-3">
                            <label for="inputEmail4" class="col-form-label">Product </label>
                            @Html.DropDownListFor(m => m.ProductID, new SelectList(ViewBag.ddlProduct, "Value", "Text"), new { @class = "form-control" })
                        </div>
                        <div class="col-lg-3">
                            <label for="inputEmail4" class="col-form-label">Batch No </label>
                            @Html.DropDownListFor(m => m.BatchNo, new SelectList(ViewBag.ddlBatch, "Value", "Text"), new { @class = "form-control" })
                        </div>
                        <div class="col-lg-3">
                            <br />
                       
                            <input type="submit" id="btnSearch" name="Search" value="Search" class="btn btn-primary " />
                        </div>
                    </div>
                  
                    <div class="row">
                        <div class="col-md-12 table-responsive">
                            <table id="example23" class="display nowrap table table-hover table-striped table-bordered" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>Sr No.</th>
                                        <th>Franchise Name </th>
                                        <th>Franchise ID</th>
                                        <th>Batch No</th>
                                        <th>Product Name</th>
                                        <th>Received Stock</th>
                                        <th>Sold Stock</th>
                                        <th>Current Stock </th>
                                       <td></td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lstFranchise != null)
                                        {
                                            int i = 1;
                                            foreach (var Item in Model.lstFranchise)
                                            {
                                                <tr class="text-left">
                                                    <td>@i</td>
                                                    <td>@Item.FranchiseName</td>
                                                    <td>@Item.LoginID</td>
                                                    <td>@Item.BatchNo</td>
                                                    <td>@Item.ProductName</td>    
                                                    <td>@Item.Credit</td>
                                                    <td>@Item.Debit</td>
                                                    <td>@Item.Balance</td>
                                                   <td><a href="/FranchiseAdmin/StockReportProductWise?ProductID=@Item.ProductID&FranchiseID=@Item.PK_FranchiseID&batchno=@Item.BatchNo" class="btn btn-sm btn-primary">View </a></td>
                                                </tr>

                                                i++;
                                            }
                                        }
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


<script src="../../vendor/jquery/jquery.min.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.0/themes/smoothness/jquery-ui.css">

<script>
$('#FromDate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeMonth: true,
        changeYear: true,
});
$('#ToDate').datepicker({
    dateFormat: 'dd/mm/yy',
    changeMonth: true,
    changeYear: true,
});



</script>