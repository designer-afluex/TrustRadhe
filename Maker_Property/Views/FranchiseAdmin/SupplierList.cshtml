@model TrustRadhe.Models.Franchise

@{
    ViewBag.Title = "SupplierList";
    Layout = "~/Views/Shared/FranchiseMasterLayout.cshtml";
}




<div class="row">
    <div class="col-sm-12">
        <ol class="breadcrumb">
            <li>
                <i class="clip-home-3"></i>
                <a href="#">
                    Supplier
                </a>
            </li>
            <li class="active">
                Supplier List
            </li>
        </ol>
    </div>
</div>
<br />
@using (Html.BeginForm("SupplierList", "FranchiseAdmin", FormMethod.Post, new { @id = "form1", name = "formKYC" }))
{
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Supplier List
                    @*  <a href="/FranchiseAdmin/Registration" class="btn btn-sm btn-primary link pull-right">Add New Product</a>*@
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12 table-responsive">
                            <table id="example23" class="display nowrap table table-hover table-striped table-bordered" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>Sr No.</th>
                                        <th>Name</th>
                                        <th>GSTNo</th>
                                        <th>Contact </th>
                                        <th>Email</th>
                                        <th>Address</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lstFranchise != null)
                                        {
                                            int i = 1;
                                            foreach (var Item in Model.lstFranchise)
                                            {
                                                <tr class="text-left">
                                                    <td>@i</td>
                                                    <td>@Item.SupplierName</td>
                                                    <td>@Item.GSTNo</td>
                                                    <td>@Item.Contact</td>
                                                    <td>@Item.Email</td>
                                                    <td>@Item.Address</td>
                                                    <td>
                                                        <a href="/FranchiseAdmin/SupplierRegistration?id=@Item.EncryptKey" class="btn btn-primary">Edit</a>
                                                        <a href="/FranchiseAdmin/DeleteSupplier?id=@Item.SupplierID" onclick="return confirm('Are you sure you want to delete this Supplier ?');" class="btn btn-danger">Delete</a>
                                                    </td>
                                                </tr>
                                                i++;
                                            }
                                        }
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

