@model TrustRadhe.Models.Franchise

@{
    ViewBag.Title = "KitList";
    Layout = "~/Views/Shared/FranchiseMasterLayout.cshtml";
}

 <div class="row">
    <div class="col-sm-12">
        <ol class="breadcrumb">
            <li>
                <i class="clip-home-3"></i>
                <a href="#">
                    Master
                </a>
            </li>
            <li class="active">
                Kit List
            </li>
        </ol>
    </div>
</div>
<br />
@using (Html.BeginForm("KitList", "FranchiseAdmin", FormMethod.Post, new { @id = "form1", name = "formKYC" }))
{
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Kit List
                    @*  <a href="/FranchiseAdmin/Registration" class="btn btn-sm btn-primary link pull-right">Add New Product</a>*@
                </div>
                <div class="panel-body">
                    <p style="color:red">
                        @TempData[""]
                    </p>
                    <div class="row">

                        @*<div class="col-md-12">
                            <div class="col-lg-3">
                                <div class="form-group">
                                    Product Name
                                    @Html.DropDownListFor(m => m.ProductID, new SelectList(ViewBag.ddlProduct, "Value", "Text"), new { @class = "form-control" })

                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    Size
                                    @Html.TextBoxFor(m => m.Size, new { @class = "form-control", @onkeypress = "return isNumberKey(event);", @placeholder = "Size" })
                                </div>
                            </div>

                            <div class="col-lg-3">
                                <div class="form-group">
                                    Unit
                                    @Html.DropDownListFor(m => m.UnitID, new SelectList(ViewBag.ddlUnit, "Value", "Text"), new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label>HSNCode  </label>
                                    @Html.TextBoxFor(m => m.HSNCode, new { @class = "form-control", @placeholder = "HSN Code" })
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    <input type="submit" name="Search" id="Search" value="Search" class="btn btn-primary" />
                                </div>
                            </div>
                        </div>*@
                        <div class="col-md-12 table-responsive">
                            <table id="example23" class="display nowrap table table-hover table-striped table-bordered" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>Sr No.</th>
                                        <th>Product Name</th>
                                        <th>Kit Name</th>
                                        <th>Amount </th>
                                        
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lstFranchise != null)
                                        {
                                            int i = 1;
                                            foreach (var Item in Model.lstFranchise)
                                            {
                                                <tr class="text-left">
                                                    <td>@i</td>
                                                    <td>@Item.ProductName</td>
                                                    <td>@Item.KitName</td>
                                                    <td>@Item.TotalAmount</td>
                                                  
                                                    <td>
                                                         
                                                        <a href="//?id=@Item.ProductID" onclick="return confirm('Are you sure you want to delete this  ?');" class="btn btn-danger pull-right">Delete</a>
                                                    </td>
                                                </tr>

                                                i++;
                                            }
                                        }
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


