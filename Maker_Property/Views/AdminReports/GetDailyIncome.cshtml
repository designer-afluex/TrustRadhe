@model TrustRadhe.Models.Reports

@{
    ViewBag.Title = "GetDailyIncome";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-sm-12">

        <ol class="breadcrumb">
            <li>
                <i class="clip-home-3"></i>
                <a href="#">
                    Income Statement
                </a>
            </li>
            <li class="active">
                Get Daily Income
            </li>

        </ol>


    </div>
</div>
<br />
@using (Html.BeginForm("GetDailyIncome", "AdminReports", FormMethod.Post, new { @id = "form1" }))
{

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Get Daily Income


                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    
                        <div class="row">
                            <p style="color:red">
                                @TempData["Publish"]
                            </p>
                            <div class="col-md-12 table-responsive">
                                <div class="row">
                                    <div class="col-lg-3">
                                        LoginId
                                        @Html.TextBoxFor(m => m.LoginId, new { @class = "form-control", @placeholder = "Login Id" })
                                    </div>
                                    <div class="col-lg-3">
                                        From Date
                                        @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control", @placeholder = "From Date" })
                                    </div>
                                    <div class="col-lg-3">
                                        To Date
                                        @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control", @placeholder = "TO Date" })
                                    </div>


                                    <div class="col-lg-3">
                                        <br />
                                        <input type="submit" name="GetDetails" class="btn btn-info" value="Get Details" />
                                    </div>
                                </div>
                                <table id="example23" class="display nowrap table table-hover table-striped table-bordered" cellspacing="0" width="100%">
                                    <thead>
                                        <tr>
                                            <th>Sr No.</th>
                                            <th>Date</th>
                                            <th>Login ID</th>
                                            <th>Name</th>
                                            <th>Direct</th>
                                            <th>Harmony</th>
                                            <th>Direct Leadership Bonus</th>
                                            <th>Gross</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null)
                                        {
                                            if (Model.lsttopupreport != null)
                                            {
                                                int i = 1;
                                                foreach (var Item in Model.lsttopupreport)
                                                {
                                                    <tr class="text-left">
                                                        <td>@i</td>
                                                        <td>@Item.ClosingDate</td>
                                                        <td>@Item.LoginId</td>
                                                        <td>@Item.Name</td>
                                                        <td>@Item.DirectIncome</td>
                                                        <td>@Item.BinaryIncome</td>
                                                        <td>@Item.LeadershipBonus</td>
                                                        <td>@Item.Amount</td>

                                                    </tr>
                                                    i++;
                                                }

                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
            <!-- partial:../../partials/_footer.html -->
            <!-- partial -->
        </div>
        <!-- main-panel ends -->
   

}


<script src="../..//WebsiteCss/js/jquery.min.js"></script>

<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.0/themes/smoothness/jquery-ui.css">

<script>

    $('#FromDate').datepicker({
        dateFormat: 'dd/mm/yy',
    });

    $('#ToDate').datepicker({
        dateFormat: 'dd/mm/yy',
    });

    function isNumberOrDecimal(evt) {
        var charCode = (evt.which) ? evt.which : evt.keyCode;
        if (charCode != 46 && charCode > 31
          && (charCode < 48 || charCode > 57))
            return false;

        return true;
    }

</script>