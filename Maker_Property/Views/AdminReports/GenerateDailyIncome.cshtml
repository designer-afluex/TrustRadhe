@model TrustRadhe.Models.Reports

@{
    ViewBag.Title = "GenerateDailyIncome";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-sm-12">

        <ol class="breadcrumb">
            <li>
                <i class="clip-home-3"></i>
                <a href="#">
                    Income Statement
                </a>
            </li>
            <li class="active">
                Generate Daily Income
            </li>

        </ol>


    </div>
</div>
<br />
@using (Html.BeginForm("GenerateDailyIncome", "AdminReports", FormMethod.Post, new { @id = "form1" }))
{

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Generate Daily Income


                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="row">
                        <p style="color:red">
                            @TempData["GenerateIncomeNew"]
                        </p>
                        <div class="col-md-12 table-responsive">
                            <div class="row">

                                <div class="col-lg-3">
                                    <div class="form-group">
                                        Date
                                        @Html.TextBoxFor(m => m.ClosingDate, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>

                                <div class="col-lg-3">
                                    <br />
                                    <input type="submit" name="GenerateIncome" class="btn btn-info" value="Generate Income" />
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
        <!-- partial:../../partials/_footer.html -->
        <!-- partial -->
    </div>
        <!-- main-panel ends -->
    


    
}

<script src="../..//WebsiteCss/js/jquery.min.js"></script>

<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.0/themes/smoothness/jquery-ui.css">

<script>

    $('#ClosingDate').datepicker({
        dateFormat: 'dd/mm/yy',
    });


    function isNumberOrDecimal(evt) {
        var charCode = (evt.which) ? evt.which : evt.keyCode;
        if (charCode != 46 && charCode > 31
          && (charCode < 48 || charCode > 57))
            return false;

        return true;
    }

</script>