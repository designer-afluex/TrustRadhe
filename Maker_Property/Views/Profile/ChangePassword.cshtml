@model TrustRadhe.Models.Password
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- /.row -->
@using (Html.BeginForm("ChangePassword", "Profile", FormMethod.Post, new { @id = "form1" }))
{

    <!-- PAGE-HEADER -->
    <div class="page-header">
        <div>
            <h1 class="page-title">Profile</h1>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/User/AssociateDashBoard">Dashboard</a></li>
                <li class="breadcrumb-item active" aria-current="page">Change Password</li>
            </ol>
        </div>
    </div>
        <!-- PAGE-HEADER END -->

            <span style="color:red"> @TempData["ChangePassword"]</span>
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        
                        <div class="card-body">

                            <fieldset>
                                <div class="row">
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label>Password Type <span style="color:red">*</span></label>
                                            @Html.DropDownListFor(m => m.PasswordType, new SelectList(ViewBag.ddlPasswordType, "Value", "Text"), new { @class = "select2 form-select form-control" })
                                            @Html.ValidationMessageFor(m => m.PasswordType)
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label>Old Password <span style="color:red">*</span></label>
                                            @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.OldPassword)
                                            @*<input type ="text" id="txtLastName" value="@item1.LastName" disabled="disabled" class="form-control" />*@
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label>New Password <span style="color:red">*</span></label>
                                            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.NewPassword)
                                            @*<input type ="text" id="txtMobile"  value="@item1.Mobile" disabled="disabled" class="form-control" />*@
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <input type="submit" id="btnUpdate" class="btn btn-success" name="btnUpdate" value="Update" onclick="return validate();" />
                                        </div>
                                    </div>
                                </div>


                            </fieldset>

                        </div>
                    </div>
                </div>
            </div>
            }
            <style>
                .errortext {
                    border: 1px solid red !important;
                    background-color: #fff0f0 !important;
                }
            </style>
            <script>
                function validate() {
                    $(".errortext").removeClass("errortext");
                    if ($('#PasswordType').val() == '0') {
                        $("#PasswordType").addClass('errortext');
                        $('#PasswordType').focus();
                        return false;
                    }
                    if ($('#OldPassword').val() == '') {
                        $("#OldPassword").addClass('errortext');
                        $('#OldPassword').focus();
                        return false;
                    }
                    if ($('#NewPassword').val() == '') {
                        $("#NewPassword").addClass('errortext');
                        $('#NewPassword').focus();
                        return false;
                    }

                    return true;
                }
            </script>


