@model TrustRadhe.Models.DashBoard
@{
    ViewBag.Title = "Associate DashBoard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 <!--app-content open-->

        <!-- PAGE-HEADER -->
        <div class="page-header">
            <div>
                <h1 class="page-title">Associate Dashboard</h1>
            </div>
        </div>
        <!-- PAGE-HEADER END -->
        <!-- ROW-1 -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-3 col-md-6 col-sm-12">
                                <label><i class="fe fe-log-in"></i><strong> Login Id :</strong></label> <span>@ViewBag.LoginId</span>
                            </div>
                            <div class="col-lg-3 col-md-6 col-sm-12">
                                <label><i class="fe fe-user"></i><strong> Name :</strong></label> <span>@ViewBag.DisplayName</span>
                            </div>
                            <div class="col-lg-3 col-md-6 col-sm-12">
                                <label><i class="fe fe-calendar"></i><strong> Date of Joining :</strong></label> <span>@ViewBag.JoiningDate</span>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xl-12">
                <div class="row">
                    <div class="col-lg-6 col-md-12 col-sm-12 col-xl-3">
                        <div class="card overflow-hidden">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col">
                                        <h6 class="">Total Team</h6>
                                        <h3 class="mb-2 number-font">@ViewBag.TotalDownline</h3>
                                    </div>
                                    <div class="col col-auto">
                                        <div class="counter-icon bg-primary-gradient box-shadow-primary brround ms-auto">
                                            <i class="fe fe-users text-white mb-5 "></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-12 col-sm-12 col-xl-3">
