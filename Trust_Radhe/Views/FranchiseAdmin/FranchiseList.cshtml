@model TrustRadhe.Models.Franchise

@{
    ViewBag.Title = "FranchiseList";
    Layout = "~/Views/Shared/FranchiseMasterLayout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <ol class="breadcrumb">
            <li>
                <i class="clip-home-3"></i>
                <a href="#">
                    Franchise
                </a>
            </li>
            <li class="active">
                Franchise List
            </li>
        </ol>
    </div>
</div>

<br />
@using (Html.BeginForm("FranchiseList", "FranchiseAdmin", FormMethod.Post, new { @id = "form1", name = "formKYC" }))
{
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Franchise List
                 @*   <a href="/FranchiseAdmin/Registration" class="btn btn-sm btn-primary link pull-right">New Franchise Registration</a>*@
                </div>
                <p style="color:red">
                    @TempData["FranchiseList"]

                </p>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-3">
                            Login Id
                            @Html.TextBoxFor(m => m.LoginID, new { @class = "form-control", @placeholder = "Login Id" })
                        </div>
                        <div class="col-md-3">
                            Firm Name
                            @Html.TextBoxFor(m => m.FirmName, new { @class = "form-control", @placeholder = "Firm Name" })
                        </div>
                        <div class="col-md-3">
                            Franchise Name
                            @Html.TextBoxFor(m => m.FranchiseName, new { @class = "form-control", @placeholder = "Franchise Name" })
                         
                        </div>

                        <div class="col-md-3">
                            <br />
                            <input type="submit" class="btn btn-info" value="Search" name="Search" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 table-responsive">
                            <table id="example23" class="display nowrap table table-hover table-striped table-bordered" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>Sr No.</th>
                                        <th>Login ID</th>
                                        <th>Password</th>
                                        <th>Firm Name</th>
                                        <th>Franchise Name</th>
                                        <th>Contact</th>
                                        <th>Email</th>
                                        <th>PAN No</th>
                                        <th>Adhar No</th>
                                        <th>GSTNo</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lstFranchise != null)
                                        {
                                            int i = 1;
                                            foreach (var Item in Model.lstFranchise)
                                            {
                                                <tr class="text-left">
                                                    <td>@i</td>
                                                    <td>@Item.LoginID</td>
                                                    <td>@Item.Password</td>
                                                    <td>@Item.FirmName</td>
                                                    <td>@Item.FranchiseName</td>
                                                    <td>@Item.Contact</td>
                                                    <td>@Item.Email</td>
                                                    <td>@Item.PAN</td>
                                                    <td>@Item.AdharNo</td>
                                                    <td>@Item.GSTNo</td>
                                                    <td>
                                                        <a href="/FranchiseAdmin/DeleteFranchise?id=@Item.EncryptKey" onclick="return confirm('Are you sure you want to delete this Franchise ?');" class="btn btn-danger pull-right" >Delete</a>
                                                        <a href="/FranchiseAdmin/Registration?id=@Item.EncryptKey" class="btn btn-primary pull-right">Edit</a>
                                                    </td>
                                                </tr>

                                                i++;
                                            }
                                        }
                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}




