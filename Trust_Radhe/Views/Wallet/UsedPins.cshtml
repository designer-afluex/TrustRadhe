@model TrustRadhe.Models.Wallet

@{
    ViewBag.Title = "UsedPins";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("UsedPins", "Wallet", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
 <div class="row">
        <div class="col-lg-12">
         <br />
           
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                     Used Pins
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-3">
                            <div class="form-group">
                                <label>Register To ID </label>
                                @Html.TextBoxFor(m => m.RegisteredTo, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="form-group">
                                <label>Register To Name </label>
                                @Html.TextBoxFor(m => m.RegisteredToName, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="form-group">
                                <label>ePinNo </label>
                                @Html.TextBoxFor(m => m.ePinNo, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="form-group">
                                <label>Package  </label>
                                @Html.DropDownListFor(m => m.Package, new SelectList(ViewBag.ddlProduct, "Value", "Text"), new { @class = "form-control", @onchange = "FillAmount();" })
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="form-group">
                                <br />
                                <input type="submit" id="btnSearch" class="btn btn-success pull-left" name="Search" value="Search" />
                            </div>
                        </div>
                    </div>
                     <table id="example23" class="display nowrap table table-hover table-striped table-bordered" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>Sr No.</th>
                                <th>E-Pin No</th>
                                <th>Package</th>
                                <th>Owner</th>
                                <th>Created Date</th>
                                <th>Registered To</th>
                                <th>Status</th>
                                
                                
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                if (Model.lstunusedpins != null)
                                {
                                    int i = 1;
                                    foreach (var Item in Model.lstunusedpins)
                                    {
                                <tr class="text-left">
                                    <td>@i</td>

                                    <td>@Item.ePinNo</td>
                                    <td>@Item.Package</td>

                                    <td>
                                        
                                        @Item.DisplayName

                                    </td>
                                    <td>@Item.AddedOn</td>
                                    <td>
                                       @Item.RegisteredTo
                                    </td>
                                    <td>@Item.Status</td>
                                   
                                </tr>
                                        i++;
                                    }

                                }
                            }
                        </tbody>
                    </table>

                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
}
<script src="../vendor/jquery/jquery.min.js"></script>

<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });
</script>

