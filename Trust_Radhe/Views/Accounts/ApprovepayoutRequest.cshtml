@model TrustRadhe.Models.Wallet
@{
    ViewBag.Title = "ApprovepayoutRequest";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">
    <div class="col-sm-12">

        <ol class="breadcrumb">
            <li>
                <i class="clip-home-3"></i>
                <a href="#">
                    Accounts
                </a>
            </li>
            <li class="active">
                Approve Payout Request
            </li>

        </ol>


    </div>
</div>
<br />

<span style="color: red">@TempData["Topup"] </span>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Approve Payout Request


            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 table-responsive">
                        <table id="example23" class="display nowrap table table-hover table-striped table-bordered" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>Sr No.</th>
                                    <th>Login Id</th>
                                    <th>Name</th>
                                    <th>Requested Date</th>

                                    <th>Amount</th>

                                    <th>Status</th>
                                    <th></th>

                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    if (Model.lstPayoutrequest != null)
                                    {
                                        int i = 1;
                                        foreach (var Item in Model.lstPayoutrequest)
                                        {
                                            <tr class="text-left">
                                                <td>@i</td>
                                                <td>@Item.LoginId</td>
                                                <td>@Item.DisplayName</td>
                                                <td>@Item.AddedOn</td>

                                                <td>@Item.Amount</td>

                                                <td>@Item.Status</td>
                                                <td>
                                                    @if (Item.Status == "Pending")
                                                    {
                                                        <a class="btn btn-success btn-sm" href="/Accounts/ApproveRequest/@Item.Pk_RequestId">Approve</a>
                                                            <a class="btn btn-danger btn-sm" href="/Accounts/DeclineRequest/@Item.Pk_RequestId">Decline</a>
                                                    }

                                                </td>

                                            </tr>
                                            i++;
                                        }

                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- content-wrapper ends -->
    <!-- partial:../../partials/_footer.html -->
    <!-- partial -->
</div>
<!-- main-panel ends -->




