@model TrustRadhe.Models.Wallet
@{
    ViewBag.Title = "ApproveEwalletRequest";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <br />
        @*<h4 class="page-header">Approve Ewallet Request</h4>*@
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Approve Ewallet Request
                    <br />
                <span style="color: red">
                    @TempData["EApproveRequest"]
                </span>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                 <table id="example23" class="display nowrap table table-hover table-striped table-bordered" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>Sr No.</th>
                            <th>Login Id</th>
                            <th>Name</th>
                            <th>Requested Date</th>
                            <th>Request Code</th>
                            <th>Amount</th>
                            <th>Payment Mode</th>
                            <th>Bank Details</th>
                            <th>Document</th>
                            <th>Status</th>
                            <th></th>

                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            if (Model.WalletRequestList != null)
                            {
                                int i = 1;
                                foreach (var Item in Model.WalletRequestList)
                                {
                            <tr class="text-left">
                                <td>@i</td>
                                <td>@Item.LoginId</td>
                                <td>@Item.DisplayName</td>
                                <td>@Item.AddedOn</td>
                                <td>@Item.RequestCode</td>

                                <td>@Item.Amount</td>
                                <td>@Item.PaymentMode</td>
                                <td>BankName - <span style="color: blue">@Item.BankName</span><br />
                                    BankBranch - <span style="color: blue">@Item.BankBranch</span><br />
                                    Transaction No - <span style="color: blue">@Item.DDChequeNo</span><br />
                                    TransactionDate - <span style="color: blue">@Item.DDChequeDate</span>


                                </td>
                                <td>
                                    <img src="@Item.DocumentImg" style="width:50px;height:50px" /></td>
                                <td>@Item.Status</td>
                                <td>
                                    @if (Item.Status == "Pending")
                                    {
                                        <a class="btn btn-success btn-sm" href="/Accounts/ApproveEwallet/@Item.Pk_RequestId">Approve</a>
                                        <a class="btn btn-danger btn-sm" href="/Accounts/DeclineEwwalletRequest/@Item.Pk_RequestId" >Decline</a>
                                    }

                                </td>

                            </tr>
                                    i++;
                                }

                            }
                        }
                    </tbody>
                </table>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

<script src="../vendor/jquery/jquery.min.js"></script>

<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });
</script>

