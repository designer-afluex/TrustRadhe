@model TrustRadhe.Models.Reports

@{
    ViewBag.Title = "TopupList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("PayoutLedger", "Wallet", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-lg-12">
            <br />
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Topup List
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    
                    <table id="example23" class="display nowrap table table-hover table-striped table-bordered" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>Sr No.</th>
                                <th>Name</th>
                                <th>Upgradation Date</th>
                                <th>Product Name</th>
                                <th>Amount</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                if (Model.lsttopupreport != null)
                                {
                                    int i = 1;
                                    foreach (var Item in Model.lsttopupreport)
                                    {
                                        <tr class="text-left">
                                            <td>@i</td>
                                            <td>@Item.Name</td>
                                            <td>@Item.UpgradtionDate</td>
                                            <td>@Item.ProductName</td>
                                            <td>@Item.Amount</td>
                                            <td>
                                                <a href="/User/PrintTopup?invid=@Item.FK_InvestmentID" target="_blank" class="btn btn-sm btn-primary">Print</a>
                                            </td>y
                                        </tr>

                                        i++;
                                    }
                                }
                            }

                        </tbody>
                    </table>

                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>

}
