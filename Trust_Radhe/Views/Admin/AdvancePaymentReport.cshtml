@model TrustRadhe.Models.Wallet

@{
    ViewBag.Title = "AdvancePaymentReport";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-sm-12">

        <ol class="breadcrumb">
            <li>
                <i class="clip-home-3"></i>
                <a href="#">
                    Accounts
                </a>
            </li>
            <li class="active">
                Approve KYC
            </li>

        </ol>


    </div>
</div>
<br />
@using (Html.BeginForm("AdvancePaymentReport", "Admin", FormMethod.Post, new { @id = "form1", name = "formKYC" }))
{


    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Advance Payment Report
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label>Login ID</label>
                            @Html.TextBoxFor(m => m.LoginId, new { @class = "form-control", @placeholder = "Login ID" })
                        </div>
                        <div class="col-lg-3 form-group">
                            <label>From Date </label>
                            @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                        <div class="col-lg-3 form-group">
                            <label>To Date </label>
                            @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                        <div class="col-md-6 form-group">
                            <br />
                            <input type="submit" class="btn btn-sm btn-primary" value="Get Details" name="btnDetails" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 table-responsive">
                            <table id="example23" class="display nowrap table table-hover table-striped table-bordered" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>Sr No.</th>
                                        <th>Login ID</th>
                                        <th>Name</th>
                                        <th>Amount</th>
                                        <th>Payment Date</th>
                                        <th>Payment Mode</th>
                                        <th>Payment Details</th>
                                        <th>Description</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lstewalletledger != null)
                                        {
                                            int i = 1;
                                            foreach (var Item in Model.lstewalletledger)
                                            {
                                                <tr class="text-left">
                                                    <td>@i</td>
                                                    <td>@Item.LoginId</td>
                                                    <td>@Item.DisplayName</td>
                                                    <td>@Item.Amount</td>
                                                    <td>@Item.PaymentDate</td>
                                                    <td>@Item.PaymentMode</td>
                                                    <td>@Item.TransactionNo</td>
                                                    <td>@Item.Description</td>
                                                </tr>

                                                i++;
                                            }
                                        }
                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
        <!-- partial:../../partials/_footer.html -->
        <!-- partial -->
    </div>
        <!-- main-panel ends -->

}

<script src="../../vendor/jquery/jquery.min.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.0/themes/smoothness/jquery-ui.css">
<script>

    $('#FromDate').datepicker({
        dateFormat: 'dd/mm/yy',
    });
    $('#ToDate').datepicker({
        dateFormat: 'dd/mm/yy',
    });
</script>

<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });
</script>