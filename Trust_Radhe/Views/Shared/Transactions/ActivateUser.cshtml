@model TrustRadhe.Models.Transactions

@{
    ViewBag.Title = "ActivateUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
        <div class="col-lg-12">
            <br />
            @*<h4 class="page-header">Associate List</h4>*@
        </div>
    </div>
@using (Html.BeginForm("PayoutReport", "AdminReport", FormMethod.Post, new { @id = "form1" }))
{
    <p style="color:red">
        @TempData["ActivateUser"]
    </p>
     
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Associate List
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                     <table id="example23" class="display nowrap table table-hover table-striped table-bordered" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                 <th>Sr No.</th>
                               <th> Login Id</th>
                                <th>Password</th>
                                <th>Name</th>
                                <th>Spill Id</th>
                                <th>Spill Name</th>
                                <th>Joining Date</th>
                                <th>Mobile No</th>
                                <th>Email Id</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                if (Model.lstassociate != null)
                                {
                                    int i = 1;
                                    foreach (var Item in Model.lstassociate)
                                    {
                                <tr class="text-left">
                                    <td>@i</td>
                                    <td>@Item.LoginID</td>
                                    <td>@Item.Password</td>
                                    <td>@Item.Name</td>
                                    <td>@Item.SponsorId</td>
                                    <td>@Item.SponsorName</td>
                                    <td>@Item.JoiningDate</td>
                                    <td>@Item.Mobile</td>
                                    <td>@Item.Email</td>
                                  
                                    <td>
                                        @if(Item.TemPermanent == "P")
                                        {
                                            <a href="/Transactions/DeactivateUserByAdmin?MemberID=@Item.LoginID" class="btn btn-danger">
                                                Deactivate
                                            </a>
                                        }
                                        else
                                        {
                                            <a href="/Transactions/ActivateUserByAdmin?MemberID=@Item.LoginID" class="btn btn-success">
                                                Activate
                                            </a>
                                        }
                                    </td>

                                </tr>
                                         
                                    }
                                    i++;
                                }
                            }
                        </tbody>
                    </table>

                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
}
<script src="../vendor/jquery/jquery.min.js"></script>

<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });
</script>
