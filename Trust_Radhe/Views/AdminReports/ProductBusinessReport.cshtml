@model TrustRadhe.Models.Reports

@{
    ViewBag.Title = "ProductBusinessReport";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">
    <div class="col-sm-12">

        <ol class="breadcrumb">
            <li>
                <i class="clip-home-3"></i>
                <a href="#">
                    Reports
                </a>
            </li>
            <li class="active">
                Product Business Report
            </li>

        </ol>


    </div>
</div>
<br />
@using (Html.BeginForm("ProductBusinessReport", "AdminReports", FormMethod.Post, new { @id = "form1" }))
{

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Business Report

                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="row">

                        <div class="col-md-12 table-responsive">
                            <div class="row">
                                <div class="col-md-3">
                                    Login Id
                                    @Html.TextBoxFor(m => m.LoginId, new { @class = "form-control", @placeholder = "Login Id" })
                                </div>
                                <div class="col-md-3">
                                    From Date
                                    @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control", @placeholder = "From  Date", @readonly = "read" })
                                </div>
                                <div class="col-md-3">
                                    To Date
                                    @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control", @placeholder = "To  Date", @readonly = "read" })
                                </div>

                                <div class="col-md-3">
                                    Leg
                                    @Html.DropDownListFor(m => m.Leg, new SelectList(ViewBag.Leg, "Value", "Text"), new { @class = "form-control" })
                                </div>
                                <div class="col-md-3">
                                    IsDownline
                                    @Html.CheckBoxFor(m => m.IsDownline)
                                </div>
                                <div class="col-md-3">
                                    <br />
                                    <input type="submit" class="btn btn-info" value="Get Details" name="GetDetails" onclick="return Validate();" />
                                </div>

                            </div>
                            <table id="example23" class="display nowrap table table-hover table-striped table-bordered" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>Sr No.</th>
                                        <th>LoginId</th>
                                        <th>Name</th>
                                      
                                        <th>Calculation Date</th>
                                        <th style="text-align:right">Amount</th>
                                        <th style="text-align:right">BV</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lstassociate != null)
                                        {
                                            int i = 1;
                                            foreach (var Item in Model.lstassociate)
                                            {
                                                <tr class="text-left">
                                                    <td>@i</td>
                                                    <td>@Item.LoginId</td>
                                                    <td>@Item.DisplayName</td>
                                                  
                                                    <td>@Item.ClosingDate</td>
                                                    <td style="text-align:right">@Item.NetAmount</td>
                                                    <td style="text-align:right">@Item.LeadershipBonus</td>
                                                </tr>
                                                i++;
                                            }

                                        }
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td>Total</td>
                                        <td style="text-align:right"><b style="color:blue;text-align:right">@ViewBag.TotalNetAmount</b></td>
                                        <td style="text-align:right"> <b style="color:blue;text-align:right">@ViewBag.TotalBV</b></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
        <!-- partial:../../partials/_footer.html -->
        <!-- partial -->
    </div>
    <!-- main-panel ends -->

}



<script src="../..//WebsiteCss/js/jquery.min.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.0/themes/smoothness/jquery-ui.css">

<script>

    function Validate() { 

        $(".errortext").removeClass("errortext");

        if ($("#IsDownline").prop("checked") == true) {
            if ($('#LoginId').val() == '') {
                $("#LoginId").addClass('errortext');
                $('#LoginId').focus();
                return false;
            }
        }
        else {
            return true;
        }
    }


    $('#ClosingDate').datepicker({
        dateFormat: 'dd/mm/yy',
    });

    $('#FromDate').datepicker({
        dateFormat: 'dd/mm/yy',
    });
    $('#ToDate').datepicker({
        dateFormat: 'dd/mm/yy',
    });
    function isNumberOrDecimal(evt) {
        var charCode = (evt.which) ? evt.which : evt.keyCode;
        if (charCode != 46 && charCode > 31
          && (charCode < 48 || charCode > 57))
            return false;

        return true;
    }

</script>
<style>
    .errortext {
        border: 1px solid red !important;
        background-color: #fff0f0 !important;
    }
</style>