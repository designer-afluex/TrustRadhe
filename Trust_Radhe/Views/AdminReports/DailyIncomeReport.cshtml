@model TrustRadhe.Models.Reports

@{
    ViewBag.Title = "DailyIncomeReport";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-sm-12">

        <ol class="breadcrumb">
            <li>
                <i class="clip-home-3"></i>
                <a href="#">
                    Income Statement
                </a>
            </li>
            <li class="active">
                Publish Income
            </li>

        </ol>


    </div>
</div>
<br />
@using (Html.BeginForm("DailyIncomeReport", "AdminReports", FormMethod.Post, new { @id = "form1" }))
{
    <p style="color:red">
        @TempData["Publish"]
    </p>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Publish Income


                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="row">

                        <div class="col-md-12 table-responsive">
                            <div class="row">
                                <div class="col-lg-3">
                                    Publish Date
                                    @Html.TextBoxFor(m => m.ClosingDate, new { @class = "form-control", @readonly = "readonly" })
                                </div>

                                <div class="col-lg-3">
                                    <br />
                                    <input type="submit" name="btnPublish" class="btn btn-info" value="Publish Now" />
                                </div>
                            </div>
                            <table id="example23" class="display nowrap table table-hover table-striped table-bordered" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>Sr No.</th>
                                        <th>LoginId</th>
                                        <th>Date</th>
                                        <th>Direct Income</th>
                                        <th>Harmony Income</th>
                                        <th>Direct Leadership Bonus</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lsttopupreport != null)
                                        {
                                            int i = 1;
                                            foreach (var Item in Model.lsttopupreport)
                                            {
                                                <tr class="text-left">
                                                    <td>@i</td>
                                                    <td>@Item.LoginId</td>
                                                    <td>@Item.ClosingDate</td>
                                                    <td>@Item.DirectIncome</td>
                                                    <td>@Item.BinaryIncome</td>
                                                    <td>@Item.LeadershipBonus</td>
                                                </tr>
                                                i++;
                                            }

                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
        <!-- partial:../../partials/_footer.html -->
        <!-- partial -->
    </div>
    <!-- main-panel ends -->

}



<script src="../..//WebsiteCss/js/jquery.min.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.0/themes/smoothness/jquery-ui.css">

<script>

    $('#ClosingDate').datepicker({
        dateFormat: 'dd/mm/yy',
    });


    function isNumberOrDecimal(evt) {
        var charCode = (evt.which) ? evt.which : evt.keyCode;
        if (charCode != 46 && charCode > 31
          && (charCode < 48 || charCode > 57))
            return false;

        return true;
    }

</script>